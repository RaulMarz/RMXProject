<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FEMES.Views.Emergency.EmergencyMapPage"
             Title="Mapa de Emergencias">
    <ContentPage.Content>
        <StackLayout>
            
            <Image Source="mapGoogle.png" Aspect="AspectFill" HeightRequest="150" WidthRequest="400" HorizontalOptions="CenterAndExpand" Margin="0,0,0,10"></Image>
            <Button Text="Detalle" x:Name="btnDetail" Clicked="btnDetail_ClickedAsync" HorizontalOptions="CenterAndExpand"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>