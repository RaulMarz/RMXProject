<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FEMES.Views.ProfilePage"
             Title="Perfil">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Perfil"
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtName" Text="" Keyboard="Default"/>
            <Entry x:Name="txtGender" Text="" Keyboard="Default"/>
            <Entry x:Name="txtRH" Text="" Keyboard="Default"/>

            <Button Text="Actualizar" Clicked="btnUpdateUserInfo_ClickedAsync"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>