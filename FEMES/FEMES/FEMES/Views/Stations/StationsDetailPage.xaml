<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FEMES.Views.Stations.StationsDetailPage"
             x:Name="contentPageStationDetail"
             Title="Estación No. 0">
    <ContentPage.Content>
        <StackLayout>

            <Image x:Name="imgType" Source="fireStation.png" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" HorizontalOptions="Center" Margin="0,10,0,10"></Image>

            <Image Source="mapGoogle.png" Aspect="AspectFill" HeightRequest="150" WidthRequest="400" HorizontalOptions="CenterAndExpand" Margin="0,0,0,10"></Image>

            <Label x:Name="lblDescription" Text="" HorizontalOptions="StartAndExpand" />
            <Label x:Name="lblPhone" Text="" HorizontalOptions="StartAndExpand" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>